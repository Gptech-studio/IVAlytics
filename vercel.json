{
  "functions": {
    "app/**/*": {
      "runtime": "nodejs18.x"
    }
  },
  "build": {
    "env": {
      "MONGODB_URI": "@mongodb-uri",
      "NEXTAUTH_SECRET": "@nextauth-secret"
    }
  },
  "env": {
    "MONGODB_URI": "@mongodb-uri",
    "NEXTAUTH_SECRET": "@nextauth-secret",
    "APP_NAME": "IVAlytics",
    "APP_DESCRIPTION": "Calcolo semplificato di imposte e contributi"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ]
} 